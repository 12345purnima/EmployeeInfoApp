<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <PreferenceCategory
        app:title="@string/params_header">


        <ListPreference
            app:key="language"
            app:title="@string/language_title"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:defaultValue="English"
            app:useSimpleSummaryProvider="true"/>

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="@string/theme_title"
            app:summaryOn="@string/theme_on"
            app:summaryOff="@string/theme_off"
            />

        <Preference
            app:key="about_us"
            app:title="@string/about_us_title"
            app:summary="@string/about_us_summary" />

    </PreferenceCategory>



</PreferenceScreen>